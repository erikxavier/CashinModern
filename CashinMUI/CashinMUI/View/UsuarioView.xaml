<UserControl x:Class="CashinMUI.View.UsuarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             DataContext="{Binding Source={StaticResource Locator}, Path=UsuarioViewModel}" Loaded="UserControl_Loaded" Initialized="UserControl_Initialized">
    <Grid Style="{StaticResource ContentRoot}">
        <StackPanel>
            <StackPanel Orientation="Horizontal" IsEnabled="{Binding IsEditing}">
                <StackPanel>
                    <Label Content="Usuario" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0 20"/>
                    <Grid IsEnabled="{Binding IsEditing}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20 10">
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="11*" />
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="38*" />
                        </Grid.RowDefinitions>
                        <Label FontWeight="Bold" Grid.Row="0" Content="Nome:" VerticalAlignment="Center"  Margin="12 8"/>
                        <Label FontWeight="Bold" Grid.Row="1" Content="E-Mail:" VerticalAlignment="Center" Margin="12 8"/>
                        <Label Grid.Row="2" Content="Telefone:" VerticalAlignment="Center" Margin="12 8"  />
                        <Separator Grid.Row="3" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0 5"/>
                        <Label Grid.Row="5" Content="Estado:" VerticalAlignment="Center" Margin="12 8" />
                        <Label Grid.Row="6" Content="Cidade:" VerticalAlignment="Center"  Margin="12 8"/>
                        <Label Grid.Row="4" Content="CEP:" VerticalAlignment="Center"  Margin="12 8"/>
                        <Label Grid.Row="7" Content="Endereço:" VerticalAlignment="Center"  Margin="12 8"/>

                        <TextBox TabIndex="0" Text="{Binding Usuario.Nome, Mode=TwoWay}" Grid.Column="1" Width="200" VerticalAlignment="Center" Margin="12 8"/>
                        <TextBox Text="{Binding Usuario.Email, Mode=TwoWay}" Grid.Column="1" Grid.Row="1" Width="200" VerticalAlignment="Center" Margin="12 8" TabIndex="1"/>
                        <TextBox Text="{Binding Usuario.Telefone, Mode=TwoWay}" Grid.Column="1" Grid.Row="2" Width="200" VerticalAlignment="Center" Margin="12 8" TabIndex="2"/>
                        <TextBox Text="{Binding CEP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="4" Width="200" VerticalAlignment="Center" Margin="12 8" TabIndex="3"/>
                        <TextBox Text="{Binding Usuario.Estado, Mode=TwoWay}" Grid.Column="1" Grid.Row="5" Width="200" VerticalAlignment="Center" Margin="12 8" TabIndex="4"/>
                        <TextBox Text="{Binding Usuario.Cidade, Mode=TwoWay}" Grid.Column="1" Grid.Row="6" Width="200" VerticalAlignment="Center" Margin="12 8" TabIndex="5"/>
                        <TextBox Text="{Binding Usuario.Endereco, Mode=TwoWay}" Grid.Column="1" Grid.Row="7" Width="200" VerticalAlignment="Center" Margin="12 8" TabIndex="6"/>
                    </Grid>
                </StackPanel>
                <GridSplitter Name="gridSplitter" Width="4" Margin="15 0"/>
                <StackPanel IsEnabled="{Binding IsEditing}">
                    <Label Content="Dados da Empresa / Prestador" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0 20"/>
                    <Grid IsEnabled="{Binding IsEditing}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20 10">
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="38*" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Nome Fantasia:" VerticalAlignment="Center"  Margin="12 8"/>

                        <Label Grid.Row="1" Content="Tipo de Doc.:" VerticalAlignment="Center" Margin="12 8" />
                        <Label Grid.Row="2" Content="Documento:" VerticalAlignment="Center"  Margin="12 8"/>

                        <TextBox TabIndex="7" Text="{Binding Usuario.Nomefantasia, Mode=TwoWay}" Grid.Column="1" Width="200" VerticalAlignment="Center" Margin="12 8"/>
                        <ComboBox Name="cbTipoDeDocumento" Text="{Binding Usuario.Tipodocumento, Mode=TwoWay}" Grid.Column="1" Grid.Row="1" Width="200" VerticalAlignment="Center" Margin="12 8" TabIndex="8"/>
                        <TextBox Text="{Binding Usuario.Documento, Mode=TwoWay}" Grid.Column="1" Grid.Row="2" Width="200" VerticalAlignment="Center" Margin="12 8" TabIndex="9"/>
                        <Separator Grid.Row="4" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0 5"/>
                    </Grid>
                    <Label Content="Acesso ao Sistema" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0 0"/>
                    <Grid IsEnabled="{Binding IsEditing}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20 10">
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="38*" />
                            <RowDefinition Height="38*" />
                        </Grid.RowDefinitions>
                        <Label FontWeight="Bold" Grid.Row="0" Content="Nome de Usuário:" VerticalAlignment="Center"  Margin="12 8"/>
                        <Label FontWeight="Bold" Grid.Row="1" Content="Senha:" VerticalAlignment="Center" Margin="12 8"/>
                        <Label FontWeight="Bold" Grid.Row="2" Content="Confirmação de Senha:" VerticalAlignment="Center" Margin="12 8"  />
                        <TextBox TabIndex="10" Text="{Binding Usuario.Nomeusuario}" Grid.Column="1" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12 8"/>
                        <PasswordBox Name="pb1" Grid.Column="1" Grid.Row="1"  Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12 8" TabIndex="11" PasswordChanged="PasswordBox_PasswordChanged" IsEnabledChanged="PasswordBox_IsEnabledChanged"/>
                        <PasswordBox Name="pb2" Grid.Column="1" Grid.Row="2" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12 8" TabIndex="12" PasswordChanged="PasswordBox_PasswordChanged_1" IsEnabledChanged="PasswordBox_IsEnabledChanged"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 0">
                <Button Name="btnNovo" Command="{Binding NovoCommand}" Content="Novo" Margin="5 8" TabIndex="12"/>
                <Button Command="{Binding SalvarCommand}" Content="Salvar" Margin="5 8" TabIndex="13"/>
                <Button Command="{Binding AlterarCommand}" Content="Editar Usuario Logado" Margin="5 8" TabIndex="14"/>
                <Button Command="{Binding CancelarCommand}" Content="Cancelar" Margin="5 8" TabIndex="15" />
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
